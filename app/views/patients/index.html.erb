<h1>Listing patients</h1>

<table>
  <tr>
    <th>Pid</th>
    <th>Pfname</th>
    <th>Psname</th>
    <th>Psex</th>
    <th>Pcontactno</th>
    <th>Paddress</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.Pid %></td>
    <td><%= patient.Pfname %></td>
    <td><%= patient.Psname %></td>
    <td><%= patient.Psex %></td>
    <td><%= patient.Pcontactno %></td>
    <td><%= patient.Paddress %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

